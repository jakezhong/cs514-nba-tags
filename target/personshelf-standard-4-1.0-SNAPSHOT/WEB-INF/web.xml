<!-- [START webxml] -->
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <!--
      A web.xml is needed to explicitly set the order in which filters process requests. Any filters
      not included in web.xml will be loaded after filters listed below.
    -->
    <filter>
      <filter-name>DatastoreSessionFilter</filter-name>
      <filter-class>com.example.getstarted.util.DatastoreSessionFilter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>DatastoreSessionFilter</filter-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/persons</url-pattern>
        <url-pattern>/persons/mine</url-pattern>
        <url-pattern>/person/create</url-pattern>
        <url-pattern>/person/delete</url-pattern>
        <url-pattern>/person/read</url-pattern>
        <url-pattern>/person/update</url-pattern>
        <url-pattern>/groups</url-pattern>
        <url-pattern>/groups/mine</url-pattern>
        <url-pattern>/group/create</url-pattern>
        <url-pattern>/group/delete</url-pattern>
        <url-pattern>/group/read</url-pattern>
        <url-pattern>/group/update</url-pattern>
    </filter-mapping>

    <filter>
      <filter-name>LogoutFilter</filter-name>
      <filter-class>com.example.getstarted.auth.LogoutFilter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>LogoutFilter</filter-name>
      <url-pattern>/logout</url-pattern>
    </filter-mapping>

    <filter>
      <filter-name>ListByUserFilter</filter-name>
      <filter-class>com.example.getstarted.auth.ListPersonsByUserFilter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>ListByUserFilter</filter-name>
      <url-pattern>/persons/mine</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.example.getstarted.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.example.getstarted.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>listPersons</servlet-name>
      <servlet-class>com.example.getstarted.basicactions.ListPersonsServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>listPersons</servlet-name>
      <url-pattern>/</url-pattern>
      <url-pattern>/persons</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listPersonsbyuser</servlet-name>
        <servlet-class>com.example.getstarted.basicactions.ListPersonsByUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listPersonsbyuser</servlet-name>
        <url-pattern>/persons/mine</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>createPerson</servlet-name>
      <servlet-class>com.example.getstarted.basicactions.CreatePersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>createPerson</servlet-name>
      <url-pattern>/person/create</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>updatePerson</servlet-name>
      <servlet-class>com.example.getstarted.basicactions.UpdatePersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>updatePerson</servlet-name>
      <url-pattern>/person/update</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>readPerson</servlet-name>
      <servlet-class>com.example.getstarted.basicactions.ReadPersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>readPerson</servlet-name>
      <url-pattern>/person/read</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>deletePerson</servlet-name>
      <servlet-class>com.example.getstarted.basicactions.DeletePersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>deletePerson</servlet-name>
      <url-pattern>/person/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listGroups</servlet-name>
        <servlet-class>com.example.getstarted.basicactions.ListGroupsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listGroups</servlet-name>
        <url-pattern>/groups</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listGroupsbyuser</servlet-name>
        <servlet-class>com.example.getstarted.basicactions.ListGroupsByUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listGroupsbyuser</servlet-name>
        <url-pattern>/groups/mine</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createGroup</servlet-name>
        <servlet-class>com.example.getstarted.basicactions.CreateGroupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createGroup</servlet-name>
        <url-pattern>/group/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateGroup</servlet-name>
        <servlet-class>com.example.getstarted.basicactions.UpdateGroupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateGroup</servlet-name>
        <url-pattern>/group/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>readGroup</servlet-name>
        <servlet-class>com.example.getstarted.basicactions.ReadGroupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>readGroup</servlet-name>
        <url-pattern>/group/read</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteGroup</servlet-name>
        <servlet-class>com.example.getstarted.basicactions.DeleteGroupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteGroup</servlet-name>
        <url-pattern>/group/delete</url-pattern>
    </servlet-mapping>

    <!-- [START config] -->
    <context-param>
        <param-name>personshelf.storageType</param-name>
        <param-value>datastore</param-value>
    </context-param>

    <context-param>
        <param-name>personshelf.bucket</param-name>
        <param-value>cs514-people-tags.appspot.com</param-value>
    </context-param>

    <context-param>
        <param-name>sql.urlRemoteGAE</param-name>
        <param-value>jdbc:google:mysql://DATABASE-connectionName-HERE/personshelf?user=root&amp;password=MYSQL-ROOT-PASSWORD-HERE</param-value>
    </context-param>

    <context-param>
        <param-name>sql.urlRemote</param-name>
        <param-value>jdbc:mysql://google/personshelf?cloudSqlInstance=DATABASE-connectionName-HERE&amp;socketFactory=com.google.cloud.sql.mysql.SocketFactory&amp;user=root&amp;password=MYSQL-ROOT-PASSWORD-HERE</param-value>
    </context-param>

    <context-param>
        <param-name>sql.urlLocal</param-name>
        <param-value>jdbc:mysql://localhost/personshelf?user=root&amp;password=MYSQL-ROOT-PASSWORD-HERE&amp;useSSL=false</param-value>
    </context-param>
    <!-- [END config] -->
</web-app>
<!-- [END webxml] -->
